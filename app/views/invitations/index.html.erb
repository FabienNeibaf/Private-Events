<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3>Received Invitations</h3>
      <ul class="events">
        <% @received.each do |invitation| %>
          <%= render invitation %>
        <% end %>
      </ul>
    </div>
    <div class="col-md-6">
      <h3>Sent Invitations</h3>
      <ul class="events">
        <% @sent.each do |invitation| %>
          <%= render invitation %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
