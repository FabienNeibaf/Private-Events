<div class="create-user">
  <% if flash[:alert] %>
    <div class="error"><%= flash[:alert] %></div>
  <% end %>
  <h2>Sign up</h2>
  <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.submit %>
  <% end %>
</div>
